require 'rake-pipeline-web-filters'

modules = ->(input) { input.path.gsub('.js', '') }

output 'public'

input 'lib' do
  match '**/*.coffee' do
    coffee_script
  end

  match '**/*.js' do
    minispade(string: true, rewrite_requires: true, module_id_generator: modules)
    concat 'js/log.js'
  end
end

input 'public' do
  match 'run.coffee' do
    coffee_script
    minispade(string: true, rewrite_requires: true, module_id_generator: modules)
    concat 'js/run.js'
  end
end

input 'vendor' do
  match '**/*.js' do
    minispade(string: true, rewrite_requires: true, module_id_generator: modules)
    concat 'js/vendor.js'
  end
end

input 'vendor' do
  match 'ansiparse.js' do
    copy 'js/ansiparse.js'
  end

  match 'minispade.js' do
    copy 'js/minispade.js'
  end
end
